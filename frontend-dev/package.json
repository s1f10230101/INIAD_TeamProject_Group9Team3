{
    "name": "frontend-dev",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "biome check --apply-unsafe ./src ./e2e biome.json package.json playwright.config.ts svelte.config.js tsconfig.json vite.config.ts vitest-setup-client.ts",
        "format": "biome format ./src ./e2e biome.json package.json playwright.config.ts svelte.config.js tsconfig.json vite.config.ts vitest-setup-client.ts",
        "test:unit": "vitest",
        "test": "pnpm run test:unit -- --run && pnpm run test:e2e",
        "test:e2e": "playwright test"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.6",
        "@playwright/test": "^1.49.1",
        "@sveltejs/adapter-auto": "^6.0.0",
        "@sveltejs/kit": "^2.22.0",
        "@sveltejs/vite-plugin-svelte": "^6.0.0",
        "@tailwindcss/typography": "^0.5.15",
        "@tailwindcss/vite": "^4.0.0",
        "@vitest/browser": "^3.2.3",
        "playwright": "^1.53.0",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.0",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^7.0.4",
        "vite-plugin-devtools-json": "^1.0.0",
        "vitest": "^3.2.3",
        "vitest-browser-svelte": "^0.1.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@tailwindcss/oxide",
            "esbuild"
        ],
        "ignoredBuiltDependencies": [
            "@tailwindcss/oxide"
        ]
    }
}
